# ===========================================================
# Nelna Maintenance Management System - Environment Variables
# Copy this file as .env and fill in the values
# ===========================================================

# ==================== General ====================
NODE_ENV=development

# ==================== MySQL ====================
MYSQL_ROOT_PASSWORD=NelnaRoot@2024
MYSQL_DATABASE=nelna_maintenance
MYSQL_USER=nelna_user
MYSQL_PASSWORD=NelnaPass@2024
MYSQL_PORT=3306

# ==================== Redis ====================
REDIS_PORT=6379

# ==================== API ====================
API_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-me
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d
CORS_ORIGIN=http://localhost:8080
LOG_LEVEL=info
MAX_FILE_SIZE=10485760

# ==================== Nginx ====================
NGINX_PORT=8080
NGINX_SSL_PORT=8443

# ==================== phpMyAdmin ====================
PMA_PORT=8081
